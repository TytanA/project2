<%- include('../partials/header') %>
<h1> this is show page</h1>
<form action="/campaigns/<%= campaign._id %>?_method=PUT" method="POST">
    <input type="hidden" name="_id" value="<%= campaign._id %> ">
    <label>Campain Title:</label>
    <input type="text" name="titleName" value="<%=campaign.titleName  %>">
    <label>Characters:</label>
    <input type="text" name="characterNames" value="<%=campaign.characterNames.join(', ')  %>">
    <label>Setting:</label>
    <input type="text" name="setting" value="<%=campaign.setting  %>">
    <label>Starting Items:</label>
    <input type="text" name="equipAndGold" value="<%=campaign.equipAndGold  %>">
    <label>Description:</label>
    <input type="text" name="description" value="<%=campaign.description  %>">
    <input type="submit">
</form>

<%- include('../partials/footer') %> 